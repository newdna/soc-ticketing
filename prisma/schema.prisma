generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  userID        String  @id @default(uuid())
  name          String
  passwordHash  String
  email         String @unique
  tickets       Ticket[]
}

model Threat {
  threatID      String  @id @default(uuid())
  name          String
  category      String
  severity      Int
  description   String
  tickets       Ticket[]
}

model DestinationDNS {
  dnsID     String  @id @default(uuid())
  dns       String
  ticketID  String
  Ticket    Ticket  @relation(fields: [ticketID], references: [ticketID])
}

model DestinationIP {
  dstID     String  @id @default(uuid())
  ip        String
  ticketID  String
  Ticket    Ticket  @relation(fields: [ticketID], references: [ticketID])
}

model Ticket {
  ticketID          String  @id @default(uuid())
  alert             DateTime
  hit               Int
  open              DateTime  @default(now())
  close             DateTime?
  priority          String
  verdict           String?
  srcIP             String
  type              String
  geoLocation       String
  userID            String
  threatID          String
  dnsID             String
  dstID             String
  User              User    @relation(fields: [userID], references: [userID])
  Threat            Threat  @relation(fields: [threatID], references: [threatID])
  DestinationDNS    DestinationDNS[]
  DestinationIP     DestinationIP[]
}